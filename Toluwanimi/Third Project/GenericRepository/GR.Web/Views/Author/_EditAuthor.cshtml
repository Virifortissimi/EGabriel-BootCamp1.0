@model EditAuthorModel

<form asp-action="EditAuthor" role="form">
    <div class="modal-header">
        <h4 class="modal-title">Edit Author</h4>
    </div>

    <div class="modal-body form-horizontal">
        <div class= "row" >
            <div class= "col-lg-6" >
                <div class= "form-group" >
                    <label asp-for="FirstName" class="col-lg-3 col-sm-3 control-label"> </label>
                    <div class="col-lg-6"><input asp-for="FirstName" class="form-control" /></div>
                </div>
                <div class= "form-group" >
                    <label asp-for="LastName" class="col-lg-3 col-sm-3 control-label"> </label>
                    <div class="col-lg-6"><input asp-for="LastName" class="form-control" /></div>
                </div>
                <div class= "form-group" >
                    <label asp-for="Email" class="col-lg-3 col-sm-3 control-label"> </label>
                    <div class="col-lg-6"><input asp-for="Email" class="form-control" /></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button data-bs-dismiss="modal" class="btn btn-default" type="button">Back</button>
        <button class="btn btn-success" type="submit">Save</button>
    </div>
</form>