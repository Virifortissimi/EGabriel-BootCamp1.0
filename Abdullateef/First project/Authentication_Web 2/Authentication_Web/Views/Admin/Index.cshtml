@model IEnumerable<Authentication_Web.Models.AdminViewModel>

@{
    ViewBag.Title = "Employee";
}

<h2>Registered Employee</h2>

<div class="container">
<div class="row">
    @foreach (var item in Model)
    {
            <div class="panel panel-default col-md-4">
                <div class="panel-body">
                    @{ 
                        string image = "~/Content/images/photos/" + (item.Photo ?? "user.png");
                    }
                    <img src="@image" class="card-img-top" alt="...">
                    <p>@image</p>
                </div>
                <div class="panel-footer">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <h4>@item.Name</h4>
                        </li>
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(x=>x.Salary) :</strong>@item.Salary
                        </li>
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(x => x.Dob) :</strong>@item.Dob.
                        </li>
                        <li class="list-group-item">
                            <strong>@Html.DisplayNameFor(x => x.CreatedAt) :</strong>@item.CreatedAt
                        </li>
                    </ul>
                </div>
            </div>
    }
</div>
</div>

