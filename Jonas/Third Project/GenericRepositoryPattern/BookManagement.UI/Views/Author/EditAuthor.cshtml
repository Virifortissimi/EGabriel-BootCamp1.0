@model AuthorViewModel
@{
    ViewData["Title"] = "Edit Author";
}

<div class="container">
    <div class="row">
        <div class="col-4">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="mt-4">
        <form asp-action="EditAuthor" role="form">
            <div class="modal-header">
                <h4 class="modal-title">Icon</h4>
            </div>
            <div class="modal-body form-horizontal">
                <div class="form-group row my-3">
                    <label asp-for="FirstName" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
                    <div class="col-lg-8">
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row my-3">
                    <label asp-for="LastName" class="col-lg-3 col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-lg-8">
                        <input asp-for="LastName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row my-3">
                    <label asp-for="Email" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
                    <div class="col-lg-8">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a asp-action="Index" class="btn btn-default" type="button">Back</a>
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>



