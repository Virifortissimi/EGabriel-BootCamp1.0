@model AuthorBookViewModel

<form asp-action="AddAuthor" role="form">
    <div class="modal-header">
        <h4 class="modal-title">Add Author</h4>
    </div>
    <div class="modal-body form-horizontal">
        <div class="form-group row my-3">
            <label asp-for="FirstName" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
            <div class="col-lg-8">
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-3">
            <label asp-for="LastName" class="col-lg-3 col-sm-3 col-form-label fw-bold"></label>
            <div class="col-lg-8">
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-3">
            <label asp-for="Email" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
            <div class="col-lg-8">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-3">
            <label asp-for="BookName" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
            <div class="col-lg-8"><input asp-for="BookName" class="form-control" /></div>
        </div>
        <div class="form-group row my-3">
            <label asp-for="ISBN" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
            <div class="col-lg-8">
                <input asp-for="ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-3">
            <label asp-for="Publisher" class="col-lg-3 col-sm-3 col-form-label fw-bold"></label>
            <div class="col-lg-8">
                <input asp-for="Publisher" class="form-control" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button data-bs-dismiss="modal" class="btn btn-default" type="button">Close</button>
        <button class="btn btn-success" type="submit">Submit</button>
    </div>
</form>

