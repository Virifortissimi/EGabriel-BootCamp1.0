@model EditBookViewModel
@{
    ViewData["Title"] = "Edit Book";
}

<div class="container">
    <div class="row">
        <div class="col-4">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="mt-4">
        <form asp-action="EditBook" role="form">
            <div class="modal-header">
                <h4 class="modal-title">Icon</h4>
            </div>
            <div class="modal-body form-horizontal">
                <div class="form-group row my-3">
                    <label asp-for="BookName" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
                    <div class="col-lg-8">
                        <input asp-for="BookName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row my-3">
                    <label asp-for="ISBN" class="col-lg-3 col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-lg-8">
                        <input asp-for="ISBN" class="form-control" />
                    </div>
                </div>
                <div class="form-group row my-3">
                    <label asp-for="Publisher" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
                    <div class="col-lg-8">
                        <input asp-for="Publisher" class="form-control" />
                    </div>
                </div>
                <div class="form-group row my-3">
                    <label asp-for="AuthorId" class="col-lg-3 col-sm-3 col-form-label fw-bold"> </label>
                    <div class="col-lg-8">
                        <select asp-items="@Model.Authors" asp-for="AuthorId" class="form-control">
                            <option>Please select</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a asp-action="Index" class="btn btn-default" type="button">Back</a>
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>
